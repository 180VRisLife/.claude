      "Edit(~/.aws/**)",
      "Edit(~/.gnupg/**)",
      "Edit(~/.config/gh/**)",
      "Edit(//etc/**)",
      "Edit(//var/**)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.gnupg/**)",
      "Write(~/.config/gh/**)",
      "Write(//etc/**)",
      "Write(//var/**)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/greenlight.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/_system-notifications-attention-sound.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/greenlight.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/greenlight.sh --activity"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/_system-notifications-play-sound.sh"
          },
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/greenlight.sh --stop"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash /Users/chrisjamesbliss/.claude/statusline/statusline.sh"
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "php-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true
  },
  "autoUpdatesChannel": "latest",
  "minimumVersion": "2.1.6",
  "prefersReducedMotion": true
}
