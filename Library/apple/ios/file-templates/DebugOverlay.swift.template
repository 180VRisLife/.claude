/// View modifier to easily add debug overlay to any view
struct DebugOverlayModifier: ViewModifier {
    func body(content: Content) -> some View {
        content
            .overlay {
                DebugOverlay()
            }
    }
}

extension View {
    /// Add debug overlay to this view (only visible in DEBUG builds)
    func debugOverlay() -> some View {
        self.modifier(DebugOverlayModifier())
    }
}

