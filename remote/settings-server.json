{
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "statusLine": {
    "type": "command",
    "command": "bash $HOME/.claude/statusline/statusline.sh"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "php-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/_system-notifications-attention-sound.sh"
          },
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/beacon.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/beacon.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/_system-notifications-play-sound.sh"
          },
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/beacon.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/auto-format.sh",
            "async": true
          },
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/sync-ci-lint.sh",
            "async": true
          }
        ]
      }
    ]
  },
  "autoUpdatesChannel": "latest",
  "minimumVersion": "2.1.6",
  "skipDangerousModePermissionPrompt": true
}
