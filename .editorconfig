root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
indent_size = 4
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = false
function_next_line = false
shell_variant = bash
